	<!-- <select id="userSearch" parameterType="java.util.Map" resultType="user">
		select * from usertable where ${columnName} like '%'||#{value}||'%'
	</select> -->
	<select id="userSearch" parameterType="java.util.Map" resultType="user">
		select * from usertable where
		<if test="columnName=='name'">
			name like '%'||#{value}||'%'
		</if>
		<if test="columnName=='id'">
			id like '%'||#{value}||'%'
		</if>
	</select>
</mapper>